{{#if results.length}}
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12 text-center'>
                <h3 class='text-center'>Diners</h3>
            </div>
        </div>
    {{#each results}}
        <div class='row black-border result-padding'>
            <div class='col-md-6 text-center'>
                <a href='/diners/{{name}}/{{location}}'>{{name}}</a>
            </div>
            <div class='col-md-6 text-center'>
                <span>{{location}}</span>
            </div>
        </div>
    {{/each}}

{{else}}
    <div class='container-fluid'>
        <div class='row text-center result-padding'>
            <div class='col'>
                <h3>No Diners Yet!</h3>
                <h4>Be the first to add one!</h4>
            </div>
        </div>
{{/if}}
        <div class='row text-center'>
            <div class='col'>
                <a href='/addDiner'><button class='btn btn-default btn-color'>Add Diner</button></a>
            </div>
        </div>
    </div>